{{ header }} 
{{ column_left }} 

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="googleshopping-form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %} 
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %} 
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if (error_warning) %} 
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %} 

        {% if (success) %} 
            <div class="alert alert-success">{{ success }}</div>
        {% endif %} 
        {% if (error) %} 
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %} 

        {% if (account_error != "") %} 
            <div class="alert alert-danger">{{ account_error }}</div>
        {% endif %} 

        {% if (account_connection) %} 
            <div class="alert alert-info"><i class="fa fa-info"></i> {{ account_connection }}</div>
        {% endif %} 
   
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                {{ googleshopping_common }} 
                <div class="tab-content">
                    <div class="tab-pane active">
                        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="googleshopping-form" class="form-horizontal">
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="googleshopping_app_name">{{ text_app_name }}</label>
                                <div class="col-sm-10">
                                  <input type="text" name="googleshopping[connection][app_name]" value="{% if (googleshopping['connection']['app_name'] is defined) %}{{ googleshopping['connection']['app_name'] }}{% endif %}" placeholder="" id="googleshopping_app_name" class="form-control"/>
                                  {% if (error_googleshopping_app_name) %} 
                                  <div class="text-danger">{{ error_googleshopping_app_name }}</div>
                                  {% endif %} 
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="googleshopping_client_id">{{ text_googleshopping_client_id }}</label>
                                <div class="col-sm-10">
                                  <input type="text" name="googleshopping[connection][client_id]" value="{% if (googleshopping['connection']['client_id'] is defined) %}{{ googleshopping['connection']['client_id'] }}{% endif %}" placeholder="" id="googleshopping_client_id" class="form-control"/>
                                  {% if (error_googleshopping_client_id) %} 
                                  <div class="text-danger">{{ error_googleshopping_client_id }}</div>
                                  {% endif %} 
                                </div>
                            </div>
                            <div class="form-group required">
                              <label class="col-sm-2 control-label" for="googleshopping_client_secret">{{ text_googleshopping_client_secret }}</label>
                              <div class="col-sm-10">
                                <input type="text" name="googleshopping[connection][client_secret]" value="{% if (googleshopping['connection']['client_secret'] is defined) %}{{ googleshopping['connection']['client_secret'] }}{% endif %}" placeholder="" id="googleshopping_client_secret" class="form-control"/>
                                {% if (error_googleshopping_client_secret) %} 
                                <div class="text-danger">{{ error_googleshopping_client_secret }}</div>
                                {% endif %} 
                              </div>
                            </div>
                            <div class="form-group required">
                              <label class="col-sm-2 control-label" for="googleshopping_merchant_id">{{ text_googleshopping_merchant_id }}</label>
                              <div class="col-sm-10">
                                <input type="text" name="googleshopping[connection][merchant_id]" value="{% if (googleshopping['connection']['merchant_id'] is defined) %}{{ googleshopping['connection']['merchant_id'] }}{% endif %}" placeholder="" id="googleshopping_merchant_id" class="form-control"/>
                                {% if (error_googleshopping_merchant_id) %} 
                                <div class="text-danger">{{ error_googleshopping_merchant_id }}</div>
                                {% endif %} 
                              </div>
                            </div>
                        </form>
                        <div class="alert alert-info" style="margin-top: 20px">
                            <p>{{ USER_MANUAL_LINK }}</p>
                            <p>&nbsp;</p>
                            <p>{{ configure_url_text }}</p>
                            <p><b>{{ redirect_url }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ footer }} 
