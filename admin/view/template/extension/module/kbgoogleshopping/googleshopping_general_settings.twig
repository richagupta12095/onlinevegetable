{{ header }}{{ column_left }} 
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="googleshopping-general-settings" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %} 
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %} 
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if (error_warning is defined and error_warning) %} 
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %} 
        {% if (success is defined and success != '') %} 
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %} 
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit_general }}</h3>
            </div>
            <div class="panel-body">
                {{ googleshopping_common }} 
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="googleshopping-general-settings" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ text_general_enable }}</label>
                        <div class="col-sm-10">
                          <select name="googleshopping[general][enable]" id="input-status" class="form-control">
                            {% if (googleshopping['general']['enable']) %} 
                            <option value="1" selected="selected">{{ text_enabled }}</option>
                            <option value="0">{{ text_disabled }}</option>
                            {% else %} 
                            <option value="1">{{ text_enabled }}</option>
                            <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %} 
                          </select>
                        </div>
                    </div>
                    <div class="form-group" style="display:none">
                        <label class="col-sm-2 control-label" for="input-status">{{ text_general_image }}</label>
                        <div class="col-sm-10">
                          <select name="googleshopping[general][image]" id="input-status" class="form-control">
                            {% if (googleshopping['general']['image'] == 'home_default') %} 
                            <option value="home_default" selected="selected">{{ text_home_default }}</option>
                            <option value="large_default">{{ text_large_default }}</option>
                            {% else %} 
                            <option value="home_default">{{ text_home_default }}</option>
                            <option value="large_default" selected="selected">{{ text_large_default }}</option>
                            {% endif %} 
                          </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ text_out_of_stock }}</label>
                        <div class="col-sm-10">
                          <select name="googleshopping[general][out_of_stock]" id="input-status" class="form-control">
                            {% if (googleshopping['general']['out_of_stock']) %} 
                            <option value="1" selected="selected">{{ text_yes }}</option>
                            <option value="0">{{ text_no }}</option>
                            {% else %} 
                            <option value="1">{{ text_yes }}</option>
                            <option value="0" selected="selected">{{ text_no }}</option>
                            {% endif %} 
                          </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="googleshopping_product_price">{{ text_googleshopping_product_price }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="googleshopping[general][product_price]" value="{% if (googleshopping['general']['product_price'] is defined) %}{{ googleshopping['general']['product_price'] }}{% endif %}" placeholder="" id="googleshopping_product_price" class="form-control"/>
                          {% if (error_googleshopping_product_price) %} 
                          <div class="text-danger">{{ error_googleshopping_product_price }}</div>
                          {% endif %} 
                        </div>
                    </div>
                        <div class="form-group">
                        <label class="col-sm-2 control-label" for="googleshopping_no_upc">{{ text_no_upc }}</label>
                        <div class="col-sm-10">
                          <select name="googleshopping[general][no_upc]" id="googleshopping_no_upc" class="form-control">
                            {% if (googleshopping['general']['no_upc']) %} 
                            <option value="1" selected="selected">{{ text_yes }}</option>
                            <option value="0">{{ text_no }}</option>
                            {% else %} 
                            <option value="1">{{ text_yes }}</option>
                            <option value="0" selected="selected">{{ text_no }}</option>
                            {% endif %} 
                          </select>
                        </div>
                    </div>
                    <div class="form-group" style="display: none">
                        <label class="col-sm-2 control-label" for="googleshopping_sync_type">{{ text_sync_type }}</label>
                        <div class="col-sm-10">
                            <input type="hidden" name="googleshopping[general][sync_type]" value="feed"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="googleshopping_utm_campaign">{{ text_googleshopping_utm_campaign }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="googleshopping[general][utm_campaign]" value="{% if (googleshopping['general']['utm_campaign'] is defined) %}{{ googleshopping['general']['utm_campaign'] }}{% endif %}" placeholder="" id="googleshopping_utm_campaign" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="googleshopping_utm_source">{{ text_googleshopping_utm_source }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="googleshopping[general][utm_source]" value="{% if (googleshopping['general']['utm_source'] is defined) %}{{ googleshopping['general']['utm_source'] }}{% endif %}" placeholder="" id="googleshopping_utm_source" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="googleshopping_utm_medium">{{ text_googleshopping_utm_medium }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="googleshopping[general][utm_medium]" value="{% if (googleshopping['general']['utm_medium'] is defined) %}{{ googleshopping['general']['utm_medium'] }}{% endif %}" placeholder="" id="googleshopping_utm_medium" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="googleshopping_def_lang">{{ text_googleshopping_def_lang }}</label>
                        <div class="col-sm-10">
                          <select name="googleshopping[general][def_lang]" id="googleshopping_def_lang" class="form-control">
                                {% for language in languages %} 
                                    {% if (language['language_id'] == selected_language) %} 
                                        <option value="{{ language['language_id'] }}" selected="selected">{{ language['name'] }}</option>
                                    {% else %} 
                                        <option value="{{ language['language_id'] }}">{{ language['name'] }}</option> 
                                    {% endif %} 
                                 {% endfor %} 
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{ footer }}