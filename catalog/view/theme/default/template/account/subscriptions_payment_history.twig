<div class="table-responsive">
  <h3>{{ text_payment_history }}</h3>
  <table class="table table-bordered table-hover list">
    <thead>
      <tr>
        <td>{{ text_payment_planname }}</td>
        <td>{{ text_payment_orderdate }}</td>
        <td>{{ text_payment_duration }}</td>
        <td>{{ text_payment_price }}</td>
        <td class="text-right">{{ text_payment_status }}</td>
      </tr>
    </thead>
    <tbody>
      {% if payment_histories %}
      {% for payment_history in payment_histories %}
      <tr>
        <td>{{ payment_history.plan_name }}</td>
        <td>{{ payment_history.date_added }}</td>
        <td>{{ payment_history.duration }}</td>
        <td>{{ payment_history.price }}</td>
        <td class="text-right">{{ payment_history.order_status }}</td>
      </tr>
      {% endfor %}
      {% else %}
      <tr>
        <td class="text-center" colspan="6">{{ text_no_results }}</td>
      </tr>
      {% endif %}
    </tbody>
  </table>
</div>
{% if pagination %}
<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>
  <div class="col-sm-6 text-right">{{ results }}</div>
</div>
{% endif %}