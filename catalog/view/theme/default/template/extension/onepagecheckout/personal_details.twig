<div class="extpanel extpanel-default">
	<div class="extpanel-heading">
		<h4 class="extpanel-title"><i class="fa fa-user"></i> {{text_personal_details}}</h4>
	</div>
	<div class="extpanel-body">
		<div id="account">
			<div class="form-group extsm-12" style="display: {% if customer_groups|length > 1 %} block {% else %} none {% endif %};">
				<label class="control-label">{{entry_customer_group}}</label>
				{% if customer_group_type %}
				{% for customer_group in customer_groups %}
				 {% if customer_group.customer_group_id == customer_group_id %}
				<div class="radio">
					<label>
						<input type="radio" name="personal_details[customer_group_id]" value="{{ customer_group.customer_group_id }}" checked="checked" />
						{{ customer_group.name }}</label>
				</div>
				{% else %}
				<div class="radio">
					<label>
						<input type="radio" name="personal_details[customer_group_id]" value="{{ customer_group.customer_group_id }}" />
						{{ customer_group.name }}</label>
				</div>
				 {% endif %}
				{% endfor %}
				{% else %}
					<select class="formcontrol" name="personal_details[customer_group_id]">
					{% for customer_group in customer_groups %}
						{% if customer_group.customer_group_id == customer_group_id %}
						<option selected="selected" value="{{customer_group['customer_group_id']}}">{{customer_group['name']}}</option>
						{% else %}
						<option value="{{customer_group['customer_group_id']}}">{{customer_group['name']}}</option>
						{% endif %}
					{% endfor %}
					</select>
				{% endif %}
			</div>
			
			{% for feild in feilds %}
			
				{% if feild.key == 'firstname' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-firstname">{{feild['label']}}</label>
						<input type="text" name="personal_details[firstname]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-firstname" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'lastname' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-lastname">{{feild['label']}}</label>
						<input type="text" name="personal_details[lastname]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-lastname" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'email' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-email">{{feild['label']}}</label>
						<input type="text" name="personal_details[email]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-email" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'telephone' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-telephone">{{feild['label']}}</label>
						<input type="text" name="personal_details[telephone]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-telephone" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'fax' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-fax">{{feild['label']}}</label>
						<input type="text" name="personal_details[fax]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-fax" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'company' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-company">{{feild['label']}}</label>
						<input type="text" name="personal_details[company]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-company" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'address_1' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-address-1">{{feild['label']}}</label>
						<input type="text" name="personal_details[address_1]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-address-1" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'address_2' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-address-2">{{feild['label']}}</label>
						<input type="text" name="personal_details[address_2]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-address-2" class="formcontrol" />
					</div>
				{% endif %}
				
				{% if feild.key == 'postcode' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-postcode">{{feild['label']}}</label>
						<input type="text" name="personal_details[postcode]" value="{{postcode}}" placeholder="{{feild['placeholder']}}" id="input-payment-postcode" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'country' %}
					<div class="form-group {{feild['chide'] ? 'hide' : ''}} {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-country">{{feild['label']}}</label>
						<select name="personal_details[country_id]" id="input-payment-country" class="formcontrol">
							<option value="">{{feild['placeholder']}}</option>
							{% for country in countries %}
							{% if country['country_id'] == country_id %}
							<option value="{{country['country_id']}}" selected="selected">{{country['name']}}</option>
							{% else %}
							<option value="{{country['country_id']}}">{{country['name']}}</option>
							{% endif %}
							{% endfor %}
						</select>
					</div>
				{% endif %}
				{% if feild.key == 'zone' %}
					<div class="form-group {{feild['zhide'] ? 'hide' : ''}} {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-zone">{{feild['label']}}</label>
						<select name="personal_details[zone_id]" id="input-payment-zone" class="formcontrol">
						</select>
					</div>
				{% endif %}

				{% if feild.key == 'city' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}}">
						<label class="control-label" for="input-payment-city">{{feild['label']}}</label>
						<select  name="personal_details[city]" id="input-payment-city" class="formcontrol" />
						</select>
					</div>
				{% endif %}

				{% if feild.key == 'password' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}} register_fields">
						<label class="control-label" for="input-payment-password">{{feild['label']}}</label>
						<input type="password" name="personal_details[password]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-password" class="formcontrol" />
					</div>
				{% endif %}
				{% if feild.key == 'confirm' %}
					<div class="form-group {{class1}} {{feild['required'] ? 'required' : ''}} register_fields">
						<label class="control-label" for="input-payment-confirm">{{feild['label']}}</label>
						<input type="password" name="personal_details[confirm]" value="" placeholder="{{feild['placeholder']}}" id="input-payment-confirm" class="formcontrol" />
					</div>
				{% endif %}
		
			{% endfor %}
			
			{% for custom_field in custom_fields %}
				{% if custom_field['location']=='address' or custom_field['location'] == 'account' %}
				{% if custom_field['type'] == 'select' %}
				<!-- Custom Select Option -->
				<div id="payment-custom-field{{custom_field.custom_field_id}}" class="{{class1}} form-group custom-field" data-sort="{{custom_field.sort_order}}">
					<label class="control-label" for="input-payment-custom-field{{custom_field.custom_field_id}}">{{custom_field.name}}</label>
					<select name="personal_details[custom_field][{{custom_field['location']}}][{{custom_field['custom_field_id']}}]" id="input-payment-custom-field{{custom_field['custom_field_id']}}" class="formcontrol">
