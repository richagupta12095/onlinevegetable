{{ header }}
<div id="container" class="container j-container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      {{ text_message }}
	 
	  {% if show_bank_details %}
	  <h3>{{text_instruction}}</h3>
		<p><b>{{text_description}}</b></p>
		<div class="well well-sm">
		  <p>{{bank}}</p>
		  <p>{{text_payment}}</p>
		</div> 
		{% endif %}
	  
      {{invoice}} <br/>
	  
	  {% if print_invoice %}
	  <a target="_new" class="btn btn-primary pull-left" href="{{print_invoice}}">{{text_print_invoice}}</a>
	  {% else %}
	  <a target="_new" class="hide" href="{{print_invoice}}">{{text_print_invoice}}</a>
	  {% endif %}
	   <div class="buttons" style="margin:0">
        <div class="pull-right"><a href="{{continue}}" class="btn btn-primary">{{button_continue}}</a></div>
      </div>
	  <div class="clearfix"></div>
	  {{products}}
	  
     
      {{content_bottom}}</div>
    {{column_right}}</div>
</div>
{{ order_success_page_google_analytics }}
{{footer}}