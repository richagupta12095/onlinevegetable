{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }} ciblog-content">{{ content_top }}
      <h2 class="bgheading">{{ heading_title }}</h2>
      {% if categories %}
      <div class="panel panel-default ciauthor-wrap">
        <div class="panel-body">
          <ul class="list-inline">
            {% for category in categories %}
            <li>
              <h2 class="ciauthor-c" id="{{ category.name }}">{{ category.name }}</h2>
              {% if category.author %}
              {% for author in category.author %}
              <div class="ciauthors">
                <a href="{{ author.href }}">
                  <img src="{{ author.thumb }}" alt="{{ author.image_alt }}" title="{{ author.image_title }}" /> <br/> <span>{{ author.name }}</span>
                </a>
              </div>
              {% endfor %}
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% else %}
      <p>{{ text_empty }}</p>
      <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}