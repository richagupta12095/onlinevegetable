{% if cicomments %}
	{% for cicomment in cicomments %}
		<table class="table table-striped table-bordered">
		  <tr>
		    <td style="width: 50%;"><strong>{{ cicomment.author }}</strong></td>
		    <td class="text-right">{{ cicomment.date_added }}</td>
		  </tr>
		  <tr>
		    <td colspan="2"><p>{{ cicomment.text }}</p></td>
		  </tr>
		</table>
	{% endfor %}
	<div class="text-right">{{ pagination }}</div>
{% else %}
	<p>{{ text_no_comments }}</p>
{% endif %}