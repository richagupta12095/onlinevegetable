{{ header }}
 <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-membership" class="form-horizontal">
<div id="product-category" class="container">
   <div class="row">
      {{ column_left }}
      {% if column_left and column_right %}
      {% set class = 'col-sm-6' %}
      {% elseif column_left or column_right %}
      {% set class = 'col-xs-12 col-sm-8 col-md-9 col-lg-9' %}
      {% else %}
      {% set class = 'col-sm-12' %}
      {% endif %}
      <div id="content" class="{{ class }}">
         {{ content_top }}
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
         </ul>
         <h1 class="co-heading">Choose Membership - Product <span class="sweight">Total weight Allow:{{kgweight}}Kg - (<p class="pweight">{{total}}</p>)</span></h1>
         <div class="col-md-12">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-membership" class="form-horizontal">
               <div class="table-responsive">
                  <table class="table table-bordered table-hover" id="myTable">
                     <thead style="background: #eee;">
                        <tr>
                           <th style="display:none;">#</th>
                           <th>Image</th>
                           <th>Product Name</th>
                           <th>Delivery days</th>
                           <th>Weight</th>
                        </tr>
                     </thead>
                     <tbody>
                        {% if products %}
                        {% for product in products %}
                        <tr id="row_{{product.product_id}}">
                           <td class="text-center" style="display:none;"><input type="checkbox"  name="productId[]" id="chpid_{{product.product_id}}" {{product.chked}} value="{{product.product_id}}"> </td>
                           <td class="text-center"> 
                              {% if product.insp_images %}

                              <img src="{{product.insp_images}}" style="width: 50px;float: left;" alt="{{product.name}}" class="img-thumbnail"> 
                            {% else %}
                             <img src="{{product.thumb}}" style="width: 50px;float: left;" alt="{{product.name}}" class="img-thumbnail"> 
                            {% endif %}

                           </td>
                           <td class="text-left">{{product.name}}</td>
                           <td class="text-left">
                              {% if product.dresult %}
                              <select name="dday[]" id="dday" class="form-control dday changedropdown  dday_{{product.product_id}}" data-id="{{product.product_id}}">
                                 <option value="">Select days</option>
                                 {% for item in product.dresult %}
                                 {% if item.delivery_settings_id==product.selected_slot_id %}
                                	 <option selected="selected" value="{{item.id}}">{{item.name}}</option>
                                 {% else %}
                               		  <option value="{{item.id}}">{{item.name}}</option>
                                 {%endif%}
                                 {% endfor %}
                              </select>
                              {% endif %}
                           <td class="text-left">
                              {% if product.wresult %}
                              <select name="weight[]" id="weight" class="form-control wgt weight changedropdown  weight__{{product.product_id}}" data-id="{{product.product_id}}">
                                 <option value="">Select weight</option>
                                 {% for item in product.wresult %}
                                   {% if item.id==product.selected_weigth_id %}
                                 <option selected="selected" value="{{item.id}}" data-value="{{item.value}}" data-id="{{product.product_id}}">{{item.name}}</option>
                                  {% else %}
                                      <option value="{{item.id}}" data-value="{{item.value}}" data-id="{{product.product_id}}">{{item.name}}</option>
                                  {%endif%}
                                 {% endfor %}
                              </select>
                              {% endif %}
                           </td>
                        </tr>
                        {% endfor %}
                        {% endif %}
                     </tbody>
                  </table>
               </div>
               <input type="hidden" name="tsvalue" id="tsvalue" value=""> 
            </form>
             <h1 class="co-heading">Total weight Allow<span class="sweight">:{{kgweight}}Kg - (<p class="pweight">{{total}}</p>)</span></h1>
            <div class="row">
               <div class="buttons">
                  <div class="pull-left"><a  href="{{backlink}}"  class="btn btn-primary ">Back</a></div>
                  <div class="pull-right"><a  class="btn btn-primary  btn-save">Next</a></div>
               </div>
            </div>
         </div>
         {{ content_bottom }}
      </div>
      {{ column_right }}
   </div>
<div class="modal" tabindex="-1" role="dialog" id="modal-developer" style="z-index:100000">


   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h4 class="modal-title"><i class="fa fa-cog"></i> <strong>Select Time slot</strong></h4>
         </div>
         <div class="modal-body">
            <table class="table table-bordered" id="tblslot">
               <thead>
                  <tr>
                     <td>Days</td>
                     <td style="width: 150px;">Time</td>
                  </tr>
               </thead>
               <tbody>
                  {% if dsetting %}
                  {% for day in dsetting %}
                  <tr>
                     <td>
                        <div class="btn-group" data-toggle="buttons">    
                           <label class="active">
                              {{day.name}}
                           </label>
                        </div>
                     </td>
                     <td class="text-right">
                           {% if timeslot %}
                              <select required name="vslot[{{day.id}}][]" id="vslot" class="form-control vslot">
                                 <option value="">Select Time Slot</option>
                                 {% for v in timeslot %}
                                 <option value="{{v.id}}">{{v.name}}</option>
                                 {% endfor %}
                              </select>
                              {% endif %}

                     </td>
                  </tr>
                  {% endfor %}
                  {% endif %}
               </tbody>
            </table>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-time-slot">Save changes</button>
            <button type="button" class="btn btn-secondar btn-close-modal" data-dismiss="modal">Close</button>
         </div>
      </div>
   </div>

</div>


    </form>
</div>


